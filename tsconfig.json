{
	"compilerOptions": {
		"target": "es5",
		"moduleResolution": "node",
		"baseUrl": ".",
		"allowSyntheticDefaultImports": true,
		"removeComments": true,
		"alwaysStrict": true,
		"allowJs": true,
		"noUnusedLocals": true,
		"importHelpers": true,
		"downlevelIteration": true,
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"typeRoots": ["node_modules/@types", "typings"],
		"lib": ["es7", "dom"],
		"jsx": "react",
		"rootDir":".",
		"paths": {
			"@utils": ["src/renderer/screenShortcut/utils"],
			"@assets": ["src/renderer/screenShortcut/assets"],
			"@constant": ["src/constant"]
		}
	},
	"exclude": ["node_modules"],
	"include": ["typings/*", "src/**/*"],
}
